<h1>Dashboard</h1>

<br>

<div class="row">
	<div class="col-12 col-lg-6">
		<h2>Grows</h2>
		<div class="row">
			<% Grow.where.not(grow_status: [:done, :aborted]).each do |grow| %>
				<%= render partial: 'grows/grow', locals: { grow: grow } %>
			<% end %>
		</div> 
	</div>

	<div class="col-12 col-lg-6">
		<h2>To Do</h2>
    <%= render partial: "todos/todos", locals: { todos: current_user.todos.where(todo_status: :todo).limit(10), status: :todo } %>
	</div>
</div>
<br>

<% Room.all.each do |room| %>
	<h2><%= room.name %></h2>
	<div class="row">
		<div class="col-sm-12 col-lg-6">
			<%= render partial: "rooms/room_devices", locals: {room: room} %>
		</div>

		<div class="col-sm-12 col-md-8 col-lg-3 mb-4">
			<%= render partial: "admin/events/events", locals: {room: room} %>
		</div>

		<div class="col-sm-12 col-lg-3">
	    <%= render partial: "rooms/camshot", locals: {room: room}  %>
	  </div>
	</div>
<% end %>

<hr>

<div class="row">
  <div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card border-success mb-3">
      <div class="card-body text-success">
        <h5 class="card-title mb-0"><b><%= total_watts %></b> Watts</h5>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card border-info mb-3">
      <div class="card-body text-info">
        <h5 class="card-title mb-0"><b><%= total_kwh_day %></b> kWh / day</h5>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card border-primary mb-3">
      <div class="card-body text-primary">
        <h5 class="card-title mb-0"><b><%= total_kwh_month %></b> kWh / month</h5>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card border-danger mb-3">
      <div class="card-body text-danger">
        <h5 class="card-title mb-0"><b><%= kwh_cost_estimation total_kwh_month %></b> â‚¬ / month</h5>
      </div>
    </div>
  </div>
</div>

<br>

