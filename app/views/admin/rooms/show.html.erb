<h1>
  <%= @room.name %> <span class="text-muted" style="font-size: 14px">
    [<%= @room.room_type.titleize %>] (<%= @room.length %> x <%= @room.width %> x <%= @room.height %>)
  </span>
  <div class="float-right">
    <%= link_to new_admin_room_device_path(@room), class: "btn btn-info" do %>
      <%= icon "fas", "plus" %>
      Device
    <% end %>
    <%= link_to 'Edit', edit_admin_room_path(@room), class: "btn btn-success" %>
  </div>
</h1>

<hr> 

<h4>
  Devices
  <div class="float-right">
    <%= link_to admin_room_devices_path(@room), class: "text-muted mr-2", style: "font-size: 11px;" do %>
      <%= icon "fas", "eye" %> All devices
    <% end %>
    <%= link_to admin_room_events_path(@room), class: "text-muted", style: "font-size: 11px;" do %>
      <%= icon "fas", "eye" %> All events
    <% end %>
  </div>
</h4>

<div class="row">
  <div class="col-sm-12 col-lg-9">
    <%= render partial: "admin/rooms/room_devices", locals: {room: @room} %>
  </div>

  <div class="col-sm-12 col-md-8 col-lg-3">
    <%= render partial: "admin/events/events", locals: {room: @room} %>
  </div>
</div>

<br> 

<h4>
  Subjects
</h4>

<%= render partial: "admin/subjects/subjects_charts", locals: { subjects: @room.subjects } %>

<div class="row">
  <%= render partial: "admin/subjects/subjects", locals: { subjects: @room.subjects } %>
</div>

<% if @room.scenario %>
  <br> 

  <h4><%= @room.scenario.name %></h4>

  <%= render partial: "admin/scenarios/scenario", locals: {scenario: @room.scenario} %>

  <br>
<% end %>

