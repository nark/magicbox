<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Room type</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.room_type %></td>
        <td><%= room.length %></td>
        <td><%= room.width %></td>
        <td><%= room.height %></td>
        <td><%= link_to 'Edit', edit_admin_room_path(room) %></td>
        <td><%= link_to 'Destroy', admin_room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
