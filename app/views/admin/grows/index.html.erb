<h1>
  Grows
  <div class="float-right">
    <%= link_to 'New Grow', new_admin_grow_path, class: "btn btn-primary" %>
  </div>
</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Progress</th>
      <th>End date</th>
      <th>Status</th>
      <th>Substrate</th>
      <th>Flowering</th>
      <th>Subjects</th>
      <th width="105px"></th>
    </tr>
  </thead>

  <tbody>
    <% @grows.each do |grow| %>
      <tr>
        <td><%= link_to "##{grow.id}", [:admin, grow] %></td>
        <td>
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%= grow.progress_percents %>%" aria-valuenow="<%= grow.progress_percents %>" aria-valuemin="0" aria-valuemax="100"><%= grow.progress_percents %>%</div>
          </div>
        </td>
        <td><%= fdate grow.end_date %></td>
        <td><span class="badge badge-primary"><%= grow.grow_status %></span></td>
        <td><span class="badge badge-pill badge-info"><%= grow.substrate %></span></td>
        <td><span class="badge badge-pill badge-secondary"><%= grow.flowering %></span></td>
        <td><%= grow.subjects.count %></td>
        <td>
          <%= link_to icon("fas", "eye"), [:admin, grow], class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Edit', edit_admin_grow_path(grow), class: "btn btn-sm btn-outline-success" %>
      </tr>
    <% end %>
  </tbody>
</table>
