      <%= link_to admin_users_path do %>
        <%= icon "fas", "users" %>
        Users
      <% end %>
    </li>
  </ul>

  <ul class="list-unstyled components">
    <li>
      <%= link_to current_user do %>
        <%= icon "fas", "user" %>
        <%= current_user.email %>
      <% end %>
    </li>
    <li>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
          <%= icon "fas", "sign-out-alt" %>
          Disconnect
        <% end %>
      <% end %>
    </li>
