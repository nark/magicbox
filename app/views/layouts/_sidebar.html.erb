<nav id="sidebar">
  <div class="sidebar-header">
      <h3>
        <%= link_to root_path do %>
          <%= icon "fas", "seedling", class: "text-success" %>
          MagicBox
        <% end %>
      </h3>
      <strong>MB</strong>
  </div>

  <ul class="list-unstyled components">
    <li>
      <%= link_to admin_dashboard_path do %>
      	<%= icon "fas", "tachometer-alt" %>
