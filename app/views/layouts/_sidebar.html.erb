      <% end %>
    </li>
    <li>
      <%= link_to admin_samples_path do %>
        <%= icon "fas", "chart-line" %>
        Statistics
      <% end %>
    </li>
  </ul>

  <ul class="list-unstyled components">
    <li>
      <%= link_to admin_grows_path do %>
        <%= icon "fas", "seedling" %>
        Grows
      <% end %>
    </li>

    <li>
      <a href="#roomsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
        <%= icon "fas", "home" %>
